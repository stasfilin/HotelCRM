{
	"name": "Node.js & TypeScript",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			"VARIANT": "20-bullseye"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"forwardPorts": [1234, 5678],
	"remoteUser": "node",

	"runArgs": ["--init", "--privileged"],
	"overrideCommand": false,
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	}
}